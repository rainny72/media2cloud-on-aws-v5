    # (EXPERIMENTAL FEATURES)
    # * Knowledge Graph
    # * AmazonQIntegrationStack
    #
    ################################################################################
    KnowledgeGraphStack:
        Condition: bEnableKnowledgeGraph
        Type: AWS::CloudFormation::Stack
        Properties:
            TemplateURL: !Sub
                - http://${bucket}${region}.s3.amazonaws.com/${keyprefix}/${stackName}
                -
                    bucket: !FindInMap
                        - Solution
                        - Template
                        - S3Bucket
                    region: !If
                        - bSingleRegion
                        - ""
                        - !Sub -${AWS::Region}
                    keyprefix: !FindInMap
                        - Solution
                        - Template
                        - KeyPrefix
                    stackName: !FindInMap
                        - Solution
                        - Stack
                        - Graph
            Parameters:
                S3Bucket: !Sub
                    - ${bucket}${region}
                    -
                        bucket: !FindInMap
                            - Solution
                            - Template
                            - S3Bucket
                        region: !If
                            - bSingleRegion
                            - ""
                            - !Sub -${AWS::Region}
                KeyPrefix: !FindInMap
                    - Solution
                    - Template
                    - KeyPrefix
                SolutionId: !FindInMap
                    - Solution
                    - Project
                    - Id
                SolutionLowerCaseId: !FindInMap
                    - Solution
                    - Project
                    - LowerCaseId
                ResourcePrefix: !Sub
                    - ${solutionId}-${stackId}
                    -
                        solutionId: !FindInMap
                            - Solution
                            - Project
                            - LowerCaseId
                        stackId: !Select
                            - 4
                            - !Split
                                - "-"
                                - !Select
                                    - 2
                                    - !Split
                                        - "/"
                                        - !Ref AWS::StackId
                CustomUserAgent: !FindInMap
                    - Solution
                    - Project
                    - CustomUserAgent
                CidrBlock: !Ref CidrBlock
                AwsSdkLayer: !GetAtt CoreStack.Outputs.AwsSdkLayer
                CoreLibLayer: !GetAtt CoreStack.Outputs.CoreLibLayer
                SolutionUuid: !GetAtt CoreStack.Outputs.SolutionUuid
                IngestBucket: !GetAtt CoreStack.Outputs.IngestBucket
                ProxyBucket: !GetAtt CoreStack.Outputs.ProxyBucket
                # Media2Cloud Workflow events
                UnifiedStateMachineStatusBusName: !GetAtt CoreStack.Outputs.UnifiedStateMachineStatusBusName

    AmazonQIntegrationStack:
        Condition: bEnableAmazonQIntegration
        Type: AWS::CloudFormation::Stack
        Properties:
            TemplateURL: !Sub
                - http://${bucket}${region}.s3.amazonaws.com/${keyprefix}/${stackName}
                -
                    bucket: !FindInMap
                        - Solution
                        - Template
                        - S3Bucket
                    region: !If
                        - bSingleRegion
                        - ""
                        - !Sub -${AWS::Region}
                    keyprefix: !FindInMap
                        - Solution
                        - Template
                        - KeyPrefix
                    stackName: !FindInMap
                        - Solution
                        - Stack
                        - AmazonQIntegration
            Parameters:
                S3Bucket: !Sub
                    - ${bucket}${region}
                    -
                        bucket: !FindInMap
                            - Solution
                            - Template
                            - S3Bucket
                        region: !If
                            - bSingleRegion
                            - ""
                            - !Sub -${AWS::Region}
                KeyPrefix: !FindInMap
                    - Solution
                    - Template
                    - KeyPrefix
                SolutionId: !FindInMap
                    - Solution
                    - Project
                    - Id
                SolutionLowerCaseId: !FindInMap
                    - Solution
                    - Project
                    - LowerCaseId
                SolutionUuid: !GetAtt CoreStack.Outputs.SolutionUuid
                ResourcePrefix: !Sub
                    - ${solutionId}-${stackId}
                    -
                        solutionId: !FindInMap
                            - Solution
                            - Project
                            - LowerCaseId
                        stackId: !Select
                            - 4
                            - !Split
                                - "-"
                                - !Select
                                    - 2
                                    - !Split
                                        - "/"
                                        - !Ref AWS::StackId
                CustomUserAgent: !FindInMap
                    - Solution
                    - Project
                    - CustomUserAgent
                AwsSdkLayer: !GetAtt CoreStack.Outputs.AwsSdkLayer
                CoreLibLayer: !GetAtt CoreStack.Outputs.CoreLibLayer
                ProxyBucket: !GetAtt CoreStack.Outputs.ProxyBucket
                UnifiedStateMachineStatusBusName: !GetAtt CoreStack.Outputs.UnifiedStateMachineStatusBusName
                Media2CloudEndpoint: !GetAtt WebAppStack.Outputs.HomePage
                AmazonQBucket: !Ref AmazonQBucket
                AmazonQRegion: !GetAtt CheckBucketRegion.Region

    CustomResourcesPolicyQBucket:
        Condition: bEnableAmazonQIntegration
        Type: AWS::IAM::Policy
        Properties:
            Roles:
                - !Ref CustomResourcesRole
            PolicyName: CustomResourcesQBucket
            PolicyDocument:
                Version: "2012-10-17"
                Statement:
                    # S3 - get bucket location
                    -
                        Effect: Allow
                        Action: s3:GetBucketLocation
                        Resource: !Sub arn:aws:s3:::${AmazonQBucket}

    CheckBucketRegion:
        Condition: bEnableAmazonQIntegration
        DependsOn: CustomResourcesPolicyQBucket
        Type: Custom::CheckBucketRegion
        Properties:
            ServiceToken: !GetAtt CustomResourcesLambda.Arn
            Data:
                Bucket: !Ref AmazonQBucket

