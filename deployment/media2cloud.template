                # (OPTIONAL) Knowledge Graph demo
                KnowledgeGraph:
                    Endpoint: !If
                        - bEnableKnowledgeGraph
                        - !GetAtt KnowledgeGraphStack.Outputs.ApiEndpoint
                        - ""
                    ApiKey: !If
                        - bEnableKnowledgeGraph
                        - !GetAtt KnowledgeGraphStack.Outputs.ApiKey
                        - ""
